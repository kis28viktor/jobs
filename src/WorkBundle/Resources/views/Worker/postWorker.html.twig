{% extends '@Work/layout.html.twig' %}
{% block header_ %}
    <h1 style="text-align: center; min-height: 150px;">
        Шукаєш роботу?
    </h1>
{% endblock %}
{% block  baner1 %}
    {{ parent() }}
{% endblock %}
{% block content %}
    <div class="large-8 columns">
        <div id="myCarousel" class="carousel slide">
            {% block mainbaner %}
                {{ parent() }}
            {% endblock %}
        </div>
        <div class="row">
            <div class="large-8 columns">
                <form class="panel" action="{{ path('add_worker') }}" method="post">
                    <div class="center">
                        <h4>Заповніть анкету і роботодавець сам зв’яжеться з вами</h4>
                        <div class="row">
                            <div class="large-6 columns">
                                <label>Ім’я: </label>
                                <input type="text" name="firstName" required>
                                <label>Прізвище: </label>
                                <input type="text" name="lastName" required>
                                <label>Телефон: </label>
                                <input type="tel" name="phone" required>
                            </div>
                            <div class="large-6 columns">
                                <label>Дата народження: </label>
                                <input type="date" name="date">
                                <label>Стать:</label>
                                <select name="gender" required>
                                    {% for key,gender in genders %}
                                        <option value="{{ key }}">{{ gender }}</option>
                                    {% endfor %}
                                </select>
                                <label>Місто: </label>
                                <input type="text" {% if city %}value="{{ city }}" {% endif %} class="typeahead tt-query" autocomplete="off" spellcheck="false"
                                       name="city">
                            </div>
                        </div>
                        <label>Про мене: </label>
                        <textarea name="aboutMe" style="width: 100%"></textarea>
                        <div class="well well-small">
                            <label><h4>Оберіть категорії в яких бажаєте працювати:</h4></label>
                            <div class="row" style="text-align: left">
                                {% for key,category in categories  %}
                                    <div class="large-6 columns">
                                        <input type="checkbox" value="{{ key }}" name="categories[]">{{ category }}
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                        <div class="panel">
                            <div class=""><h4>Освіта</h4></div>
                            <div class="row center">
                                <div class="large-4 columns">
                                    <label>Назва закладу: </label>
                                    <input type="text" name="education">
                                </div>
                                <div class="large-4 columns">
                                    <label>Рівень: </label>
                                    <select name="educationLevel">
                                        <option disabled selected>Рівень освіти</option>
                                        {% for key, education in educationLevels %}
                                            <option value="{{ key }}">{{ education }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                                <div class="large-4 columns">
                                    <label>Місто: </label>
                                    <input type="text" class="typeahead tt-query" autocomplete="off" spellcheck="false"
                                           name="educationCity">
                                </div>
                            </div>
                        </div>
                        <input class="button" type="submit" value="Зберегти">
                    </div>
                </form>
            </div>
            <div class="large-1 columns" style="margin-top: 26%">
                <h3>АБО</h3>
            </div>
            <div class="large-3 columns" style="margin-top: 20%">
                <a href="{{ path('find_work') }}" class="button"><h3>Знайдіть відповідну вакансію тут</h3></a>
            </div>
        </div>

    </div>
{% endblock %}
