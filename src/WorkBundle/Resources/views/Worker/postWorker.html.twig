{% extends '@Work/layout.html.twig' %}
{% block content %}
    <div class="large-8 columns well">
        <div id="myCarousel" class="carousel slide">
            <!-- Carousel items -->
            <div class="carousel-inner">
                <div class="active item"><img src="{{ asset('img/andromeda-orbit.jpg') }}"></div>
                <div class="item"><img src="{{ asset('img/launch-orbit.jpg') }}"></div>
                <div class="item"><img src="{{ asset('img/satelite-orbit.jpg') }}"></div>
            </div>
            <!-- Carousel nav -->
            <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
            <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
        </div>
        <form action="{{ path('add_worker') }}" method="post">
            <div class="center">
            <div class="row">
                <div class="large-6 columns">
                    <label>Ім’я: </label>
                    <input type="text" name="firstName" required>
                    <label>Прізвище: </label>
                    <input type="text" name="lastName" required>
                    <label>Телефон: </label>
                    <input type="tel" name="phone" required>
                </div>
                <div class="large-6 columns">
                    <label>Дата народження: </label>
                    <input type="date" name="date">
                    <label>Стать:</label>
                    <select name="gender" required>
                        {% for key,gender in genders %}
                            <option value="{{ key }}">{{ gender }}</option>
                        {% endfor %}
                    </select>
                    <label>Місто: </label>
                    <input type="text" name="city">
                </div>
                </div>
                <label>Про мене: </label>
                <textarea name="aboutMe" style="width: 100%"></textarea>
                <div class="well well-small">
                    <h6><label>Оберіть категорії:</label></h6>
                    <div class="row" style="text-align: left">
                        {% for key,category in categories  %}
                            <div class="large-6 columns">
                                <input type="checkbox" value="{{ key }}" name="categories[]">{{ category }}
                            </div>
                        {% endfor %}
                    </div>
                </div>
                <div class="well well-small">
                    <div class="">Освіта</div>
                    <div class="row center">
                        <div class="large-4 columns">
                            <label>Назва закладу: </label>
                            <input type="text" name="education">
                        </div>
                        <div class="large-4 columns">
                            <label>Рівень: </label>
                            <select name="educationLevel">
                                <option disabled selected>Рівень освіти</option>
                                {% for key, education in educationLevels %}
                                    <option value="{{ key }}">{{ education }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="large-4 columns">
                            <label>Місто: </label>
                            <input type="text" name="educationCity">
                        </div>
                    </div>
                </div>
            <input class="button" type="submit" value="Зберегти">
            </div>
        </form>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/js/bootstrap.js') }}"></script>
    <script>
        $('.carousel').carousel();
    </script>
{% endblock %}